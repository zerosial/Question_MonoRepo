{
  "version": 2,
  "github": {
    "enabled": true
  },
  "builds": [
    { "src": "/apps/client/*", "use": "@now/static" },
    { "src": "/apps/api/*", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/api/src/main.ts",
      "methods": ["GET", "POST", "DELETE", "PUT"]
    }
  ]
}
