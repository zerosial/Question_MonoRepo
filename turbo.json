{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "dotEnv": [".env"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["public/**"],
      "dotEnv": [".env"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dotEnv": [".env"]
    }
  },
  "globalDotEnv": [".env"]
}
